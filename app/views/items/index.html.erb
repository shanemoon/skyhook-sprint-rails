<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Preptime</th>
    <th>Order</th>
    <th>Username</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.prepTime %></td>
    <td><%= item.order_id %></td>
    <td><%= item.username %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

